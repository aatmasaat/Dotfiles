# basic options
set shell sh
set drawbox true
set ignorecase true
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons

# custom commands
cmd delete ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && trash -- $fx
}}

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        image/*) $IMAGE $fx;;
        audio/*) $VIDEO $fx;;
        video/*) $VIDEO $fx;;
        application/pdf) $READER $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd dragon %dragon -a -x -T $fx

# bindings
map DD delete
map DU dragon
map o open
map <c-r> reload
map <enter> shell
